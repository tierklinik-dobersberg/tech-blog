@layer components {
    .footer {
        @apply bg-gray-100 text-gray-700;
        @apply dark-mode:text-gray-200;
        @apply dark-mode:bg-gray-800;
        @apply font-medium;
        @apply py-0 md:py-2 lg:py-4;
        @apply flex justify-center items-start;
        @apply w-full;

        .container {
            @apply p-4 md:p-6 lg:p-8;
            @apply flex flex-col justify-evenly;
            @apply md:flex-row; 

            nav {
                @apply w-full md:w-auto;

                li {
                    @apply py-1;
                }
            }

            label {
                @apply font-semibold tracking-wide mb-2 mt-4 md:mt-0 block;
            }
        }
    }
}