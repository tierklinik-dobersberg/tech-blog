@layer base {
    html, body {
        @apply font-default;
        scroll-behavior: smooth;
    }

    h1, h2, h3, h4, h5 {
        @apply font-header;
    }

    /* Our page header is sticky so we need to account for that when jumping to page anchors */
    article {
        h1[id],h2[id],h3[id],h4[id] {
            scroll-margin-top: 90px;
        }
    }
}